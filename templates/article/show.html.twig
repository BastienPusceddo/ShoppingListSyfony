{% extends 'base.html.twig' %}

{% block title %}Détail{% endblock %}

{% block body %}
    <h1>Détail de l'article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>PrixUnitaire</th>
                <td>{{ article.prixUnitaire }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ article.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_article_index') }}">Retour</a>

    <a href="{{ path('admin_article_edit', {'id': article.id}) }}">Éditer</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
