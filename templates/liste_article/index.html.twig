{% extends 'base.html.twig' %}

{% block title %}Hello ListeArticleController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>{{ listeCourse.nom }}</h1>
    <a type="button" class="btn btn-primary" href="">Ajouter un article</a>
    <table class="table bg-primary-subtle m-0 ">
        <tr>
            <th scope="col">Nom article</th>
            <th scope="col">Prix</th>
            <th scope="col">Quantité</th>
            <th scope="col">important </th>
            <th scope="col">Acheter</th>
        </tr>
    {% for article in listeCourse.detailsArticles %}
        <tr>
            <td>{{ article.getArticle().nom }}</td>
            <td>{{ article.getArticle().prixUnitaire*article.quantité }}</td>
            <td>{{ article.quantité }}</td>
            {% if article.estImportant == 1 %}
            <td>oui</td>
            {% else %}
            <td>non</td>
            {% endif %}
            <td><input type="checkbox"></td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
