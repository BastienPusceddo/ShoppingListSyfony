{% extends 'base.html.twig' %}

{% block title %}Hello ListeCourseController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Détail</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ listeCourse.nom }}</td>
        </tr>
        <tr>
            <th>Date de création</th>
{#            <td>{{ listeCourse.date }}</td>#}
        </tr>
        <tr>
            <th>articles</th>
            <td>{% for article in listeCourse.detailsArticles %}
                <p>{{ article.getArticle().getNom() }}</p>
                {% else %}
                Aucun Article
                {% endfor %}
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('home') }}">Retour</a>

    <a href="{{ path('app_listeCourse_edit', {'id': listeCourse.id}) }}">Modifier</a>
</div>
{% endblock %}
