{% extends 'base.html.twig' %}

{% block title %}HomeController{% endblock %}

{% block body %}

<div class="homeContent w-100 h-100">
    <div class="title bg-primary fw-bold">
        <h1 class="text-white p-3">Hello {{ user.nom }} !</h1>
    </div>
    <div class="d-flex flex-column p-5 h-100">
        <div class="d-flex flex-row justify-content-sm-between align-items-center w-100">
            <h2>Vos listes</h2>
            <a href="" type="button" class="btn btn-primary">Créer une liste</a>
        </div>
        <table class="table  bg-primary-subtle rounded">
            {% if user.listesDeCourses|length != 0 %}
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nom liste</th>
                    <th scope="col">Outils</th>
                </tr>
                {% for liste in user.listesDeCourses %}
                    {% set i = 1 %}
                    <tr>
                        <th scope="row">{{ i }}</th>
                        <td>{{ liste.nom }}</td>
                        <td><a href="" type="button" class="btn btn-secondary">Détail</a> <a href="" type="button" class="btn btn-danger">supprimer</a></td>
                    </tr>
                {% endfor %}
            {% else %}
            <tr>
                <td>Aucune liste pour le moment</td>
            </tr>
            {% endif %}
        </table>
    </div>
</div>
{% endblock %}
